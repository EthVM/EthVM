{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "jsx": "preserve",
        "lib": ["dom", "dom.iterable", "es2015", "scripthost", "es2017.object", "esnext.asynciterable"],
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "paths": {
            "@app/*": ["./src/*"]
        },
        "resolveJsonModule": false,
        "sourceMap": true,
        "strict": true,
        "target": "esnext",
        "types": ["node", "vuetify", "vue-apollo"]
    },
    "files": ["src/typings/graphql.d.ts"],
    "exclude": ["node_modules"],
    "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "tests/**/*.ts", "tests/**/*.tsx", "src/**/*.graphql"]
}
