{
  "name": "principal-contract-sink",
  "config": {
    "connector.class": "io.confluent.connect.jdbc.JdbcSinkConnector",
    "tasks.max": {{ default .Env.PRINCIPAL_CONTRACT_SINK_TASKS_MAX "2" }},
    "topics": "contract_created,contract_destroyed,eth_list_contract_metadata,erc20_metadata,erc721_metadata,token_exchange_rates",
    "errors.tolerance": "all",
    "errors.deadletterqueue.topic.name": "postgres_contract_sink_dead_letter",
    "errors.deadletterqueue.topic.replication.factor": "1",
    "insert.mode": "upsert",
    "batch.size": 500,
    "consumer.max.poll.records": 1000,
    "connection.url": "{{ .Env.PRINCIPAL_JDBC_URL }}",
    "connection.user": "{{ .Env.PRINCIPAL_USER }}",
    "connection.password": "{{ .Env.PRINCIPAL_PASSWORD }}",
    "transforms": "snakeCaseKey,snakeCaseValue,dropFields,toJsonKey,toJsonValue,flattenValue,regexReplaceValue,convertTimestamp,stringClean",
    "transforms.flattenValue.type": "com.ethvm.kafka.connect.transforms.Flatten$Value",
    "transforms.flattenValue.delimiter": "_",
    "transforms.snakeCaseKey.type": "com.ethvm.kafka.connect.transforms.SnakeCase$Key",
    "transforms.snakeCaseValue.type": "com.ethvm.kafka.connect.transforms.SnakeCase$Value",
    "transforms.dropFields.type": "org.apache.kafka.connect.transforms.ReplaceField$Value",
    "transforms.dropFields.blacklist": "uncles",
    "transforms.regexReplaceValue.type": "com.ethvm.kafka.connect.transforms.RegexReplace$Value",
    "transforms.regexReplaceValue.whitelist": "trace_location_trace_address",
    "transforms.regexReplaceValue.regex": "[\\[\\]]",
    "transforms.regexReplaceValue.replacement": "",
    "transforms.toJsonKey.type": "com.ethvm.kafka.connect.transforms.JsonField$Key",
    "transforms.toJsonKey.whitelist": "logs,action,result",
    "transforms.toJsonValue.type": "com.ethvm.kafka.connect.transforms.JsonField$Value",
    "transforms.toJsonValue.whitelist": "logs,action,result,uncle_hashes,transaction_hashes,init,code,logo,support,social",
    "pk.mode": "record_key",
    "transforms.convertTimestamp.type": "org.apache.kafka.connect.transforms.TimestampConverter$Value",
    "transforms.convertTimestamp.target.type": "Timestamp",
    "transforms.convertTimestamp.field": "timestamp",
    "transforms.stringClean.type": "com.ethvm.kafka.connect.transforms.StringClean$Value",
    "transforms.stringClean.whitelist": "name,symbol"
  }
}
