{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "es2015", "scripthost"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "paths": {
      "@app/*": ["src/*"],
      "@shared/*": ["./../server/src/*"]
    },
    "resolveJsonModule": false,
    "sourceMap": true,
    "strict": false,
    "target": "esnext",
    "types": ["jest", "node"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "tests/**/*.ts", "tests/**/*.tsx"]
}
