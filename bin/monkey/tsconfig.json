{
  "compilerOptions": {
    "lib": ["es2018"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "typings"],
    "strict": true,
    "noImplicitAny": false,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": false
  },
  "include": ["bin/monkey/**/*"],
  "exclude": ["node_modules"]
}
